@model IEnumerable<Mvc.RoleAuthorization.Models.RoleViewModel>
@{
	ViewData["Title"] = "Roles";
}
<h1>Roles</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Id)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				<a asp-action="EditRolePermission" asp-controller="Admin" asp-route-id="@item.Id">Edit Permissions</a>
			</td>
		</tr>
		}
	</tbody>
</table>